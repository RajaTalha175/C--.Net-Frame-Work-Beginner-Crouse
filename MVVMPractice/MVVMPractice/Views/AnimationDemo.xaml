<Window x:Class="MVVMPractice.AnimationDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Animations Demo" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#FFFAFAFA">

    <Grid>
        <Rectangle x:Name="AnimatedBox" Width="100" Height="100" Fill="RoyalBlue" RadiusX="10" RadiusY="10">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                    <RotateTransform x:Name="rotateTransform" Angle="0"/>
                    <TranslateTransform x:Name="translateTransform" X="0" Y="0"/>
                </TransformGroup>
            </Rectangle.RenderTransform>

            <Rectangle.Triggers>
                <EventTrigger RoutedEvent="Rectangle.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                            <ColorAnimation Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                            From="RoyalBlue" To="OrangeRed"
                                            Duration="0:0:3"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(TranslateTransform.X)"
                                             From="0" To="300" Duration="0:0:3"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(RotateTransform.Angle)"
                                             From="0" To="360" Duration="0:0:4"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                             From="1" To="1.5" Duration="0:0:3"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                             From="1" To="1.5" Duration="0:0:3"/>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="1" To="0.3" Duration="0:0:3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Rectangle.Triggers>
        </Rectangle>

        <Button x:Name="StartButton" Content="Start Animations"
                Width="160" Height="40" VerticalAlignment="Bottom" Margin="0,0,0,30"
                HorizontalAlignment="Center" Background="SteelBlue" Foreground="White"
                Click="StartButton_Click"/>
    </Grid>
</Window>
