<Window x:Class="MVVMPractice.Views.App1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MVVMPractice.ViewModels"
        Title="App1 - Manual MVVM Student Entry"
        Height="580" Width="440"
        Background="#F4F6F8"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:SVMUsingManual />
    </Window.DataContext>

    <Grid Margin="20">
        <StackPanel Orientation="Vertical">
            <!-- Header -->
            <TextBlock Text="Student Entry Form (App1)"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2D89EF"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,15"/>

            <!-- Name -->
            <TextBlock Text="Name:" FontSize="14"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     Height="28"
                     Margin="0,2,0,8"/>

            <!-- Email -->
            <TextBlock Text="Email:" FontSize="14"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     Height="28"
                     Margin="0,2,0,8"/>

            <!-- Password -->
            <TextBlock Text="Password:" FontSize="14"/>
            <PasswordBox x:Name="pwdBox"
                         Height="28"
                         Margin="0,2,0,8"
                         PasswordChanged="PwdBox_PasswordChanged"/>

            <!-- Address -->
            <TextBlock Text="Address:" FontSize="14"/>
            <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                     Height="50"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,2,0,10"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Add Student"
                        Click="AddStudent_Click"
                        Background="#2D89EF"
                        Foreground="White"
                        FontWeight="Bold"
                        Width="130"
                        Height="35"
                        Margin="0,0,10,0"
                        Cursor="Hand"/>

                <Button Content="Go to App2"
                        Click="GoToApp2_Click"
                        Background="#28A745"
                        Foreground="White"
                        FontWeight="Bold"
                        Width="130"
                        Height="35"
                        Cursor="Hand"/>
            </StackPanel>

            <!-- Student List -->
            <TextBlock Text="Student List:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,20,0,5"/>

            <ListBox ItemsSource="{Binding Students}"
                     Height="150"
                     BorderBrush="#CCC"
                     BorderThickness="1"
                     Background="White"
                     Padding="5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="5">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Email}" FontStyle="Italic" FontSize="12"/>
                            <TextBlock Text="{Binding Address}" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
