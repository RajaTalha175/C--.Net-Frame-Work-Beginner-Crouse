<Window x:Class="MVVMPractice.Views.App2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MVVMPractice.ViewModels"
        Title="App2 - ICommand Example"
        Height="500" Width="420"
        Background="#F4F6F8"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:SVMUsingIcommand />
    </Window.DataContext>

    <Grid Margin="20">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="ICommand MVVM Example"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2D89EF"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"/>

            <!-- Name -->
            <TextBlock Text="Name:" FontSize="14"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     Height="28"
                     Margin="0,2,0,8"/>

            <!-- Email -->
            <TextBlock Text="Email:" FontSize="14"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     Height="28"
                     Margin="0,2,0,15"/>

            <!-- Add Button -->
            <Button Content="Add Student"
                    Command="{Binding AddCommand}"
                    Background="#2D89EF"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="35"
                    Cursor="Hand"/>

            <!-- Student List -->
            <TextBlock Text="Student List:" 
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,20,0,5"/>

            <ListBox ItemsSource="{Binding Students}"
                     Height="200"
                     BorderBrush="#CCC"
                     BorderThickness="1"
                     Background="White"
                     Padding="5"/>

            <!-- Go Back Button -->
            <Button Content="Back to App1"
                    Click="GoBack_Click"
                    Background="#28A745"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="35"
                    Margin="0,20,0,0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
