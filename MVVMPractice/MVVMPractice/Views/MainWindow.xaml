<Window x:Class="MVVMPractice.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MVVMPractice.ViewModels"
        Title="SCMS - Student Data Entry"
        Height="520" Width="420"
        Background="#F4F6F8"
        WindowStartupLocation="CenterScreen">

    <!-- Bind this View to the ViewModel -->
    <Window.DataContext>
        <vm:StudentViewModelUsingToolKit />
    </Window.DataContext>

    <Grid Margin="20">
        <StackPanel Orientation="Vertical">
            <!-- Header -->
            <TextBlock Text="SCMS"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2D89EF"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>

            <TextBlock Text="Student Data Entry Form"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,20"/>

            <!-- Form Fields -->
            <TextBlock Text="Name:" FontSize="14"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     Height="28"
                     Margin="0,2,0,8"/>

            <TextBlock Text="Email:" FontSize="14"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     Height="28"
                     Margin="0,2,0,8"/>

            <TextBlock Text="Password:" FontSize="14"/>
            <PasswordBox x:Name="pwdBox"
                         Height="28"
                         Margin="0,2,0,8"
                         PasswordChanged="PwdBox_PasswordChanged"/>

            <TextBlock Text="Address:" FontSize="14"/>
            <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                     Height="50"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,2,0,10"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Add Student"
                        Command="{Binding AddStudentCommand}"
                        Background="#2D89EF"
                        Foreground="White"
                        FontWeight="Bold"
                        Width="130"
                        Height="35"
                        Margin="0,0,10,0"
                        Cursor="Hand"/>

                <Button Content="Go to App1"
                        Click="GoToApp1_Click"
                        Background="#28A745"
                        Foreground="White"
                        FontWeight="Bold"
                        Width="130"
                        Height="35"
                        Cursor="Hand"/>
            </StackPanel>

            <!-- List of Students -->
            <TextBlock Text="Student List:" 
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,20,0,5"/>

            <ListBox ItemsSource="{Binding Students}"
                     Height="150"
                     DisplayMemberPath="Name"
                     BorderBrush="#CCC"
                     BorderThickness="1"
                     Background="White"
                     Padding="5"/>
        </StackPanel>
    </Grid>
</Window>
