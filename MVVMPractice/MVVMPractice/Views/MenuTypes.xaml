<Window x:Class="MVVMPractice.Views.MenuTypes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMPractice.Views"
        mc:Ignorable="d"
        Title="MenuTypes" Height="450" Width="800">
    

        <DockPanel>

            <!-- ✅ Top Menu Bar -->
            <Menu DockPanel.Dock="Top" Background="#1976D2" Foreground="White" FontWeight="SemiBold">
                <!-- 🔹 FILE MENU -->
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="New_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/download.jpg" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Open" Click="Open_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/download1.jpg" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Save" Click="Save_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/download2.jpg" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="E_xit" Click="Exit_Click"/>
                </MenuItem>

                <!-- 🔹 EDIT MENU (With Commands) -->
                <MenuItem Header="_Edit">
                    <MenuItem Header="Cu_t" Command="ApplicationCommands.Cut"/>
                    <MenuItem Header="_Copy" Command="ApplicationCommands.Copy"/>
                    <MenuItem Header="_Paste" Command="ApplicationCommands.Paste"/>
                    <Separator/>
                    <MenuItem Header="Preferences">
                        <MenuItem Header="Font"/>
                        <MenuItem Header="Theme"/>
                    </MenuItem>
                </MenuItem>

                <!-- 🔹 VIEW MENU (With Submenu) -->
                <MenuItem Header="_View">
                    <MenuItem Header="Zoom">
                        <MenuItem Header="Zoom In"/>
                        <MenuItem Header="Zoom Out"/>
                        <MenuItem Header="Reset Zoom"/>
                    </MenuItem>
                    <MenuItem Header="Status Bar" IsCheckable="True" IsChecked="True"/>
                </MenuItem>

                <!-- 🔹 HELP MENU -->
                <MenuItem Header="_Help">
                    <MenuItem Header="About" Click="About_Click"/>
                    <MenuItem Header="Check for Updates"/>
                </MenuItem>
            </Menu>

            <!-- ✅ Status Bar at Bottom -->
            <StatusBar DockPanel.Dock="Bottom" Background="#E0E0E0">
                <TextBlock Text="Ready" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StatusBar>

            <!-- ✅ Main Content Area -->
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Text Editing Area -->
                <TextBox x:Name="txtEditor"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     TextWrapping="Wrap"
                     FontSize="14"
                     Padding="10"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     Background="WhiteSmoke"
                     BorderBrush="#B0BEC5"
                     BorderThickness="1">

                    <!-- ✅ Context Menu for TextBox -->
                    <TextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Cu_t" Command="ApplicationCommands.Cut"/>
                            <MenuItem Header="_Copy" Command="ApplicationCommands.Copy"/>
                            <MenuItem Header="_Paste" Command="ApplicationCommands.Paste"/>
                            <Separator/>
                            <MenuItem Header="Select _All" Command="ApplicationCommands.SelectAll"/>
                        </ContextMenu>
                    </TextBox.ContextMenu>

                </TextBox>

                <!-- Bottom Buttons with WrapPanel -->
                <WrapPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Save" Width="100" Height="30" Margin="5" Click="Save_Click"/>
                    <Button Content="Clear" Width="100" Height="30" Margin="5" Click="Clear_Click"/>
                    <Button Content="Exit" Width="100" Height="30" Margin="5" Click="Exit_Click"/>
                </WrapPanel>
            </Grid>
        </DockPanel>
    </Window>
