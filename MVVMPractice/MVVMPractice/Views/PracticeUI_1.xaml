<Window x:Class="MVVMPractice.Views.PracticeUI_1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Entry Form"
        Background="#F4F6F8"
        WindowStartupLocation="CenterScreen"
        MinWidth="600"
        MinHeight="400"
        SizeToContent="Manual">

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE FORM -->
        <StackPanel Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch">

            <!-- FORM TITLE -->
            <TextBlock Text="Student Entry Form"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <!-- NAME -->
            <TextBlock Text="Name:"
                       FontSize="16"
                       Margin="0 0 0 6"/>
            <TextBox x:Name="StudentName"
                     FontSize="14"
                     Padding="6"
                     HorizontalAlignment="Stretch"
                     Margin="0 0 0 12"/>

            <!-- EMAIL -->
            <TextBlock Text="Email:"
                       FontSize="16"
                       Margin="0 0 0 6"/>
            <TextBox x:Name="StudentEmail"
                     FontSize="14"
                     Padding="6"
                     HorizontalAlignment="Stretch"
                     Margin="0 0 0 12"/>

            <!-- DEPARTMENT -->
            <TextBlock Text="Department:"
                       FontSize="16"
                       Margin="0 0 0 6"/>
            <TextBox x:Name="StudentDept"
                     FontSize="14"
                     Padding="6"
                     HorizontalAlignment="Stretch"
                     Margin="0 0 0 20"/>

            <!-- ADD STUDENT BUTTON (extra gap above) -->
            <Button Content="Add Student"
                    Click="AddStudent_Click"
                    Margin="0 10 0 0"
                    Padding="10"
                    Background="#2E86DE"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="#1B4F72"
                    Cursor="Hand"
                    HorizontalAlignment="Stretch"/>
        </StackPanel>

        <!-- RIGHT SIDE IMAGE DISPLAY -->
        <Grid Grid.Column="1"
              Margin="20"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Responsive Image -->
            <Viewbox Grid.Row="0"
                     Stretch="Uniform"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="10">
                <Border BorderBrush="Gray"
                        BorderThickness="2"
                        CornerRadius="8"
                        Background="White"
                        Padding="10"
                        Width="250"
                        Height="250">
                    <Image x:Name="StudentImage"
                           Stretch="Uniform"/>
                </Border>
            </Viewbox>

            <Button Grid.Row="1"
                    Content="Next Image"
                    Click="ChangeImage_Click"
                    Margin="0 20 0 0"
                    Padding="10"
                    Background="#27AE60"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="#1E8449"
                    Cursor="Hand"
                    HorizontalAlignment="Center"
                    MinWidth="120"/>
        </Grid>
    </Grid>
</Window>
